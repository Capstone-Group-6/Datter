{% extends "base.jinja2" %}
{% block title %}{{ super() }} - {{ title }}{% endblock %}
{% block pagetitle %}
	<h1>{{ title }} - Datter</h1>
{% endblock %}
{% block content %}
	<p><a href="/">Return to Main</a></p>
	<table>
		<thead>
		<tr>
			{% for column in columns %}
				<th>{{ column }}</th>
			{% endfor %}
		</tr>
		<tr>
			{% for column in columns %}
				<td><i><a href="/data/{{ id }}/histogram/{{ column|urlencode|replace("/", "%2F") }}">View Histogram</a></i></td>
			{% endfor %}
		</tr>
		</thead>
		<tbody>
		{% for datum in data %}
			<tr>
				{% for column in columns %}
					<td>{{ datum[column] }}</td>
				{% endfor %}
			</tr>
		{% endfor %}
		</tbody>
	</table>
{% endblock %}
